<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_resto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@null"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/abc_vector_test" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image_resto"
            android:layout_toEndOf="@+id/image_resto"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/resto_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:text="Ovenstorypizza"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="4.0"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="16dp" />
            </LinearLayout>



            <TextView
                android:id="@+id/resto_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="3"
                android:text="Pizza"
                android:textColor="@color/black_trans80"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/restorate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="200perperson"
                android:textColor="@color/black_trans80"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/resto_closetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:text="closesin25minutes"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/resto_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="promoted"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:textColor="@color/black_trans80"
                android:textSize="12dp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/resto_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Well sanitized kitchen* Daily temperature checks * Rider hand wash"
                android:layout_marginTop="5dp"

                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>